<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.admin.adminsettings.AdminSettingsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/settings_admin_back_arrow_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/small_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:src="@drawable/arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="680dp"
                android:background="@drawable/rounded_top_corners_layout_style"
                android:backgroundTint="@color/primary"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/default_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/admin_user_text_view"
                app:layout_goneMarginTop="60dp">

                <Button
                    android:id="@+id/action_admin_logout"
                    android:layout_width="500dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/big_gap"
                    android:layout_marginBottom="@dimen/small_gap"
                    android:fontFamily="@font/roboto_bold"
                    android:foreground="@drawable/white_button_border"
                    android:text="@string/log_out_text"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/admin_user_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:text="@string/settings_text"
                android:fontFamily="@font/roboto_bold"
                android:textSize="50sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_admin_back_arrow_image_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>