<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.for_you.ForYouFragment">

    <data>

        <variable
            name="productViewModel"
            type="com.mcmp2023.s.ui.for_you.product.recyclerview_product.viewmodel.ProductRecyclerViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_for_you_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/big_gap"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/logo_content_description"
                android:src="@drawable/logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/marketplace_text"
                android:textColor="@color/white"
                android:textSize="55sp"
                app:layout_constraintStart_toStartOf="@+id/icon_for_you_view"
                app:layout_constraintTop_toBottomOf="@+id/icon_for_you_view" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_image_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/big_gap"
                android:scaleType="centerCrop"
                android:src="@drawable/gear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/sell_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_gap"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/sell_text"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <View
                android:id="@+id/view"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:layout_marginStart="24dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/sell_text_view"
                app:layout_constraintStart_toEndOf="@+id/sell_text_view"
                app:layout_constraintTop_toTopOf="@+id/sell_text_view" />

            <TextView
                android:id="@+id/for_you_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_gap"
                android:background="@drawable/textview_hover"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="@dimen/small_gap"
                android:paddingTop="4dp"
                android:paddingEnd="@dimen/small_gap"
                android:paddingBottom="4dp"
                android:text="@string/for_you_text"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />

            <TextView
                android:id="@+id/category_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_gap"
                android:background="@drawable/textview_hover"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="@dimen/small_gap"
                android:paddingTop="4dp"
                android:paddingEnd="@dimen/small_gap"
                android:paddingBottom="4dp"
                android:text="@string/categories_text"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@+id/for_you_text_view"
                app:layout_constraintStart_toEndOf="@+id/for_you_text_view"
                app:layout_constraintTop_toTopOf="@+id/for_you_text_view" />

            <LinearLayout
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/big_gap"
                android:layout_marginTop="@dimen/medium_gap"
                android:layout_marginEnd="@dimen/big_gap"
                android:background="@drawable/search_style"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sell_text_view">

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.70"
                    android:background="@color/transparent"
                    android:hint="@string/search_hint"
                    android:minHeight="60dp"
                    android:padding="20dp"
                    android:text="@{productViewModel.productName}"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/search_image_view"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:paddingStart="@dimen/small_gap"
                    android:paddingEnd="@dimen/small_gap"
                    android:src="@drawable/search_icon" />

            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/for_you_nav_host"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/big_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginEnd="@dimen/big_gap"
                android:layout_marginBottom="@dimen/default_gap"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_layout"
                app:navGraph="@navigation/for_you_nav_graph" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>