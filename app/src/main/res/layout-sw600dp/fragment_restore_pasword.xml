<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.mcmp2023.s.ui.account.restorePassword.viewmodel.RestorePasswordViewmodel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_header_selector">

        <Button
            android:id="@+id/action_restore_password_btn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/default_gap"
            android:backgroundTint="#FF018786"
            android:fontFamily="@font/roboto_bold"
            android:onClick="@{() -> viewmodel.onRestorePassword()}"
            android:text="@string/reset_password_text"
            android:textAllCaps="true"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_gap"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/reset_password_text"
            android:textColor="@color/white"
            android:textSize="54sp"
            app:layout_constraintStart_toStartOf="@+id/action_backtologin"
            app:layout_constraintTop_toBottomOf="@+id/action_backtologin" />

        <ImageView
            android:id="@+id/action_backtologin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/big_gap"
            android:layout_marginTop="@dimen/big_gap"
            android:contentDescription="@string/arrow_back_content_description"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_gap"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/greeting_text_reset_password"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/TextFieldRestoreEmail"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/big_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_marginEnd="@dimen/big_gap"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:minHeight="56dp"
            android:padding="10dp"
            android:text="@={viewmodel.email}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <EditText
            android:id="@+id/TextFieldCodeVerify"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/big_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_marginEnd="@dimen/big_gap"
            android:background="@drawable/et_style"
            android:drawableStart="@drawable/hashtag_icon"
            android:drawablePadding="4dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/code_hint"
            android:inputType="numberPassword"
            android:minHeight="56dp"
            android:padding="10dp"
            android:text="@={viewmodel.code}"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextFieldRestoreEmail" />


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/big_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_marginEnd="@dimen/big_gap"
            android:background="@drawable/et_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextFieldCodeVerify">

            <EditText
                android:id="@+id/TextFieldNewPass"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.80"
                android:background="@color/transparent"
                android:drawableStart="@drawable/password_icon"
                android:drawablePadding="4dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:minHeight="56dp"
                android:padding="10dp"
                android:text="@={viewmodel.newPassword}"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textColorHint="@color/white" />

            <ImageView
                android:id="@+id/newPassword_hide_image_view"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_gap"
                android:layout_weight="0.1"
                android:src="@drawable/eye_closed_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/big_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_marginEnd="@dimen/big_gap"
            android:background="@drawable/et_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <EditText
                android:id="@+id/TextFieldConfirmPass"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="0.80"
                android:background="@color/transparent"
                android:drawableStart="@drawable/password_icon"
                android:drawablePadding="4dp"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/confirm_password_hint"
                android:inputType="textPassword"
                android:minHeight="56dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textColorHint="@color/white" />

            <ImageView
                android:id="@+id/ConfirmNewPassword_hide_image_view"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/small_gap"
                android:layout_weight="0.1"
                android:src="@drawable/eye_closed_icon" />

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
