<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/secondary_header_selector">

        <TextView
            android:id="@+id/tittle_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_gap"
            android:layout_marginTop="@dimen/small_gap"
            android:text="Titulo"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/title_edit_text_view"
            android:layout_width="379dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/small_gap"
            android:background="@drawable/edit_text_sell_product"
            android:ems="10"
            android:hint="Detalla la clave del producto"
            android:inputType="text"
            android:outlineProvider="none"
            android:padding="@dimen/small_gap"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tittle_text_view" />


        <TextView
            android:id="@+id/catgory_sell_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_gap"
            android:layout_marginTop="@dimen/small_gap"
            android:text="Categoria"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_edit_text_view" />

        <EditText
            android:id="@+id/category_edit_text_view"
            android:layout_width="379dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/small_gap"
            android:background="@drawable/edit_text_sell_product"
            android:ems="10"
            android:hint="Selecciona categoria"
            android:inputType="text"
            android:outlineProvider="none"
            android:padding="@dimen/small_gap"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/catgory_sell_text_view" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_gap"
            android:layout_marginTop="@dimen/small_gap"
            android:text="Descripcion"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_edit_text_view" />

        <EditText
            android:id="@+id/description_edit_text_view"
            android:layout_width="379dp"
            android:layout_height="76dp"
            android:layout_marginTop="@dimen/small_gap"
            android:background="@drawable/edit_text_sell_product"
            android:ems="10"
            android:hint="Descripcion del producto con mas detalle"
            android:inputType="text"
            android:outlineProvider="none"
            android:padding="@dimen/small_gap"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_text_view" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="45dp"
            android:layout_height="16dp"
            android:layout_marginStart="@dimen/small_gap"
            android:layout_marginTop="@dimen/small_gap"
            android:text="Estado"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_edit_text_view" />

        <EditText
            android:id="@+id/status_edit_text_view"
            android:layout_width="379dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/small_gap"
            android:background="@drawable/edit_text_sell_product"
            android:ems="10"
            android:hint="Seleccionar estado"
            android:inputType="text"
            android:outlineProvider="none"
            android:padding="@dimen/small_gap"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_text_view" />

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_gap"
            android:layout_marginTop="@dimen/small_gap"
            android:text="Precio"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_edit_text_view" />

        <EditText
            android:id="@+id/price_edit_text_view"
            android:layout_width="379dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/small_gap"
            android:background="@drawable/edit_text_sell_product"
            android:ems="10"
            android:hint="Ingresa el precio del producto"
            android:inputType="text"
            android:outlineProvider="none"
            android:padding="@dimen/small_gap"
            android:textColorHint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_text_view" />

        <androidx.cardview.widget.CardView
            android:id="@+id/add_image_card"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="@dimen/medium_gap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_edit_text_view">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anadir imagen principal" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/addmore_image_card"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="@dimen/small_gap"
            app:layout_constraintStart_toEndOf="@+id/add_image_card"
            app:layout_constraintTop_toTopOf="@+id/add_image_card">

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/action_publish_product"
            android:layout_width="222dp"
            android:layout_height="52dp"
            android:layout_marginTop="@dimen/default_gap"
            android:backgroundTint="#FF018786"
            android:text="Publicar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_image_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>