<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.admin.adminprofiles.AdminProfilesFragment.kt">

    <data>

        <variable
            name="productViewModel"
            type="com.mcmp2023.s.ui.for_you.product.recyclerview_product.viewmodel.ProductRecyclerViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/action_backfp_login"
                android:layout_width="35dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/default_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:contentDescription="@string/arrow_back_content_description"
                android:src="@drawable/arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/profile_text"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintEnd_toStartOf="@+id/user_image_view"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/action_backfp_login" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/default_gap"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:src="@drawable/gear" />

            <TextView
                android:id="@+id/profile_name_text_view"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/medium_gap"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:text="User name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_recycler_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/default_gap"
                android:layout_marginTop="@dimen/medium_gap"
                android:layout_marginEnd="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_name_text_view"
                tools:itemCount="4"
                tools:listitem="@layout/product_item" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>